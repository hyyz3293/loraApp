<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="205dp"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:paddingLeft="18dp"
    android:paddingRight="18dp"
    android:paddingTop="18dp"
    android:paddingBottom="10dp"
    android:background="@drawable/bg_terminal_6"
    android:layout_height="124dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_height="0dp" >

        <RelativeLayout
            android:layout_width="48dp"
            android:layout_height="48dp" >

            <ImageView
                android:id="@+id/terminal_coll"
                android:layout_centerInParent="true"
                android:background="@mipmap/ic_cw"
                android:layout_width="42dp"
                android:layout_height="42dp" />

            <ImageView
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:background="@mipmap/ic_cool"
                android:layout_width="18dp"
                android:layout_height="18dp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_marginLeft="13dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/terminal_title"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/terminal_ks"
                android:textColor="#4F627D"
                android:textSize="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/terminal_bf"
                android:textColor="#4F627D"
                android:textSize="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        
    </LinearLayout>
    
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/iv_status_icon"
                android:layout_width="16dp"
                android:layout_height="16dp" />

            <TextView
                android:id="@+id/tv_status_title"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="11dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="12sp"
                android:textColor="@color/black"
                />

        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="right"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/iv_battery_icon"
                android:layout_width="16dp"
                android:layout_height="16dp" />

            <TextView
                android:id="@+id/tv_battery_title"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="11dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="12sp"
                android:textColor="@color/black"
                />

        </LinearLayout>

    </LinearLayout>
    
</LinearLayout>