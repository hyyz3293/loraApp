<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_margin="40dp"
        android:layout_width="100dp"
        android:layout_height="100dp" >

        <ImageView
            android:background="@mipmap/app_logo"
            android:layout_width="100dp"
            android:scaleType="fitCenter"
            android:layout_height="100dp" />

    </LinearLayout>


    <LinearLayout
        android:background="@drawable/bg_white_12"
        android:orientation="vertical"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:paddingTop="54dp"
        android:paddingBottom="54dp"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:layout_width="520dp"
        android:layout_height="wrap_content" >

        <TextView
            android:textSize="28dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="护士站终端系统"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="账号"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:background="@drawable/bg_et_8"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="65dp">

                <EditText
                    android:id="@+id/login_user"
                    android:paddingLeft="30dp"
                    android:hint="请输入账号/选择用户"
                    android:textColorHint="#838383"
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:background="@null"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:id="@+id/login_user_dw"
                    android:gravity="center"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" >

                    <ImageView
                        android:background="@mipmap/ic_down"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="密码"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:background="@drawable/bg_et_8"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="65dp">

                <EditText
                    android:id="@+id/login_pwd"
                    android:paddingLeft="30dp"
                    android:hint="请输入密码"
                    android:textColorHint="#838383"
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:background="@null"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

            </LinearLayout>


            <TextView
                android:id="@+id/login"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:text="登录"
                android:textColorHint="#838383"
                android:textSize="22dp"
                android:textColor="@color/white"
                android:background="@drawable/bg_login_6"
                android:layout_width="match_parent"
                android:layout_height="72dp" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>